<div class="container-fluid" id="show_contacts">
  <div class="row-fluid">
    <div class="col-md-12">
      <h1>Show your contacts</h1>
    </div>
  </div>
  <% if Contact.all.present?  %>
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Action</th>
      </thead>
      <% Contact.all.each do |contact| %>
        <tr>
          <td><%= contact.first_name %></td>
          <td><%= contact.last_name %></td>
          <td><%= contact.phone_number %></td>
          <td><%= contact.address %></td>
          <td>
            <%=button_tag "Edit", :class=>"btn edit_contact", :value=>"#{contact.id}" %>
            <%=button_tag "Delete", :class=>"btn delete_contact", :value=>"#{contact.id}"%>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
